<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Doces da Madra{% endblock %}</title>
        {% block stylesheets %}
            <link href="/assets/css/materialize.css" rel="stylesheet">
            <link href="/assets/css/main.css" rel="stylesheet">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav>
                <div class="nav-wrapper blue">
                    <a href="#" class="brand-logo">Doces da Madra</a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li><a href="{{ path('default') }}"> Início </a></li>
                        <li><a href="{{ path('cadastrar_usuario') }}">Cadastrar Usuário</a></li>
                        {% if is_granted('ROLE_USER') %}
                            <li><a href="{{ path('carrinho') }}">Carrinho</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('default') }}">Pedidos</a></li>
                        {% endif %}
                        <li><a href="{{ path('app_login') }}">Entrar</a></li>
                    </ul>
                </div>
            </nav>
        {% endblock %}

        <div class="container">
            {% block body %}
            {% endblock %}
        </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>