{% extends 'base.html.twig' %}

{% block title %}Pedidos{% endblock %}

{% block body %}

    <h3>Todos os Pedidos</h3>
    <table class="centered">
        <thead>
        <tr>
            <th>Código</th>
            <th>Usuário</th>
            <th>Valor</th>
            <th>Observação</th>
        </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{ pedido.id }}</td>
                <td>{{ pedido.idUsuario.nome }}</td>
                <td>R$ {{ pedido.valor }}</td>
                <td>{{ pedido.obs }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}