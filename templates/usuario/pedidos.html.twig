{% extends 'base.html.twig' %}

{% block title %}Pedidos{% endblock %}

{% block body %}

    <h3>Seus pedidos</h3>
    <table class="centered">
        <thead>
        <tr>
            <th>Num. Pedido</th>
            <th>Valor Total</th>
            <th>Observação</th>
            <th>Opções</th>
        </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{ pedido.id }}</td>
                <td>R$ {{ pedido.valor }}</td>
                <td>{{ pedido.obs }}</td>
                <td>
                    <a href="{{ path('pedido', { 'id': pedido.id }) }}">
                        <i class="material-icons">
                            visibility
                        </i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}